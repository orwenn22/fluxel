<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup Label="Modules">
    <ProjectReference
      Condition="Exists('..\fluxel.ScoreSubmission\fluxel.ScoreSubmission.csproj')"
      Include="..\fluxel.ScoreSubmission\fluxel.ScoreSubmission.csproj"
    />
    <ProjectReference
      Condition="Exists('..\fluxel.Auth\fluxel.Auth.csproj')"
      Include="..\fluxel.Auth\fluxel.Auth.csproj"
    />

    <!-- fallback auth module (for contributors) -->
    <ProjectReference
      Condition="!Exists('..\fluxel.Auth\fluxel.Auth.csproj')"
      Include="..\fluxel.FallbackAuth\fluxel.FallbackAuth.csproj"
    />

    <ProjectReference Include="..\fluxel.Multiplayer\fluxel.Multiplayer.csproj"/>
    <ProjectReference Include="..\fluxel.Social\fluxel.Social.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\fluxel\fluxel.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetEnv" Version="3.1.1"/>
  </ItemGroup>

</Project>
